{
  "manifest_version": 3,
  "name": "Mystic YouTube Assistant",
  "version": "1.0",
  "permissions": ["sidePanel", "tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.youtube.com/*", "http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Assistant"
  }
}